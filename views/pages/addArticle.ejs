<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/headTag.ejs') %>
		<!-- <link rel="stylesheet" type="text/css" href="/css/signup.css" /> -->
		<title>Dashboard</title>
	</head>
	<body>
		<!-- TODO -->
		<!-- Header -->

		<!-- Dashboard Start -->
		<nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
			<a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" href="/api/user/dashboard">DASHBOARD</a>
			<button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse" data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search" />
			<ul class="navbar-nav px-3">
				<li class="nav-item text-nowrap">
					<a class="nav-link" href="#">Sign out</a>
				</li>
			</ul>
		</nav>

		<div class="container-fluid">
			<div class="row">
				<nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
					<div class="sidebar-sticky pt-3">
						<ul class="nav flex-column">
							<li class="nav-item">
								<div style="width: 120px; height: 150px;">
									<img src="/uploads/<%= user.avatar %> " alt="Image" class="rounded" style="width: 100%; height: 100%;" />
								</div>
							</li>
							<li class="nav-item">
								<br />
								<h4><%= user.firstName %> <%= user.lastName %></h4>
							</li>
						</ul>
						<a type="button" href="/api/user/editProfile" class="btn btn-primary">Edit Profile</a>
					</div>
				</nav>

				<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
					<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
						<!-- <h1 class="h2">ARTICLES</h1> -->
						<div class="btn-toolbar mb-2 mb-md-0">
							<div class="btn-group mr-2">
								<button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
								<button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
							</div>
							<button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
								<span data-feather="calendar"></span>
								This week
							</button>
						</div>
					</div>
					<form>
						<div class="d-flex justify-content-between">
							<h2>ADD NEW ARTICLE</h2>
							<button id="saveArticle" class="btn btn-primary mb-2">SAVE</button>
						</div>
						<div id="alert" role="alert"></div>
						<div class="form-group">
							<label for="articleTitle">Title</label>
							<input type="text" name="articleTitle" class="form-control" id="articleTitle" placeholder="Article Title" autofocus />
						</div>
						<div class="form-group">
							<label for="articleBody">Article Body</label>
							<textarea id="articleBody" name="articleBody" class="form-control" rows="10" placeholder="Start typing here..."></textarea>
						</div>
					</form>
				</main>
			</div>
		</div>
		<!-- Dashboard End -->

		<%- include("../partials/scripts.ejs") %>
		<script src="/js/article.js"></script>
	</body>
</html>
