<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../../partials/headTag.ejs') %>
		<!-- <link rel="stylesheet" type="text/css" href="/css/signup.css" /> -->
		<title>Dashboard</title>
	</head>
	<body>
		<!-- Navbar -->
		<%- include('../../partials/navbar.ejs') %>

		<!-- Dashboard Start -->
		<div class="container-fluid">
			<div class="row">
				<nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
					<div class="sidebar-sticky pt-3">
						<ul class="nav flex-column">
							<li class="nav-item">
								<div style="width: 170px; height: 200px;">
									<img src="/uploads/<%= admin.avatar  ? admin.avatar : 'defaultProfileAvatar.png' %>" alt="Image" class="rounded" style="width: 100%; height: 100%;" />
								</div>
							</li>
							<li class="nav-item">
								<br />
								<h4 class="mt-2"><%= admin.firstName %> <%= admin.lastName %></h4>
							</li>
						</ul>
						<!-- <a type="button" href="/api/admin/editProfileAdmin" class="btn btn-primary">Edit Profile</a> -->
						<button id="logout" class="btn btn-primary mt-3">Sign out</button>
					</div>
				</nav>

				<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
					<div id="alert" role="alert"></div>
					<div class="d-flex justify-content-between mt-4">
						<h2><%= blogger.firstName %> <%= blogger.lastName %></h2>
						<div>
							<a type="button" href="/api/admin/dashboardAdmin" class="btn btn-secondary mb-2">Back to dashboard</a>
							<button id="resetPassword" type="button" data-id="<%= blogger._id %>" class="btn btn-primary mb-2">Reset password</button>
							<button id="removeBlogger" type="button" data-id="<%= blogger._id %>" class="btn btn-danger mb-2">Remove blogger</button>
						</div>
					</div>

					<!-- Start table of bloggers -->
					<!-- Start articles -->
					<% for (let i = 0; i < articles.length; i++) { %>
					<!-- loop in the articles -->
					<div class="card mt-3">
						<div class="row no-gutters">
							<div class="col-md-4">
								<img src="/uploads/<%= articles[i].image %>" class="card-img" alt="<%= articles[i].title %> " />
							</div>
							<div class="col-md-8">
								<div class="card-body">
									<h5 class="card-title"><%= articles[i].title %></h5>
									<p class="card-text"><small class="text-muted"><%= articles[i].createdAt %></small></p>
									<p class="card-text"><%= articles[i].summary %></p>
									<div class="text-right">
										<a href="/api/admin/articleInfo/<%= articles[i]._id %>" type="button" id="readMore" class="btn btn-outline-secondary">Read more</a>
									</div>
								</div>
							</div>
						</div>
					</div>
					<% } %>
					<!-- End articles -->
					<!-- End table of bloggers -->
				</main>
			</div>
		</div>
		<!-- Dashboard End -->

		<%- include("../../partials/scripts.ejs") %>
		<script src="/js/admin/bloggerInfo.js"></script>
	</body>
</html>
