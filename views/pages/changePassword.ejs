<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/headTag.ejs') %>
		<!-- <link rel="stylesheet" type="text/css" href="/css/signup.css" /> -->
		<title>Dashboard</title>
	</head>
	<body>
		<!-- Navbar -->
		<%- include('../partials/navbar.ejs') %>

		<!-- Dashboard Start -->
		<nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
			<a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" href="/api/user/dashboard">DASHBOARD</a>
			<ul class="navbar-nav px-3">
				<li class="nav-item text-nowrap">
					<a class="nav-link" href="#">Sign out</a>
				</li>
			</ul>
		</nav>

		<div class="container-fluid">
			<div class="row">
				<nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
					<div class="sidebar-sticky pt-3">
						<ul class="nav flex-column">
							<li class="nav-item">
								<div style="width: 170px; height: 200px;">
									<img src="/uploads/<%= user.avatar ? user.avatar : 'default.png' %>" alt="avatar" class="rounded" style="width: 100%; height: 100%;" />
								</div>
							</li>
							<li class="nav-item">
								<br />
								<h4><%= user.firstName %> <%= user.lastName %></h4>
							</li>
						</ul>
						<button class="btn btn-primary">Edit Profile</button>
					</div>
				</nav>

				<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
					<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
						<!-- <h1 class="h2">ARTICLES</h1> -->
						<div class="btn-toolbar mb-2 mb-md-0">
							<div class="btn-group mr-2">
								<button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
								<button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
							</div>
							<button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
								<span data-feather="calendar"></span>
								This week
							</button>
						</div>
					</div>

					<div id="alert" role="alert"></div>
					<h2>Change your password</h2>
					<form action="/api/user/changePassword" method="post" id="form">
						<div class="form-group">
							<!-- <label for="password">Password</label> -->
							<input type="password" class="form-control" id="password" placeholder="New Password" />
						</div>
						<div class="form-group">
							<!-- <label for="password2">Password Confirmation</label> -->
							<input type="password" class="form-control" id="password2" placeholder="Password Confirmation" />
						</div>
						<button id="changePasswordBtn" type="submit" class="btn btn-success">Change</button>
						<a type="button" href="/api/user/dashboard" id="cancel-btn" type="submit" class="btn btn-secondary">Cancel</a>
					</form>
				</main>
			</div>
		</div>
		<!-- Dashboard End -->

		<%- include("../partials/scripts.ejs") %>
		<script src="/js/changePassword.js"></script>
	</body>
</html>
