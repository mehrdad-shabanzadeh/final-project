<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/headTag.ejs') %>
		<!-- <link rel="stylesheet" type="text/css" href="/css/signup.css" /> -->
		<title>Dashboard</title>
	</head>
	<body>
		<!-- Navbar -->
		<%- include('../partials/navbar.ejs') %>

		<!-- Dashboard Start -->
		<nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
			<a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" href="/api/admin/dashboardAdmin">DASHBOARD</a>

			<ul class="navbar-nav px-3">
				<li class="nav-item text-nowrap">
					<button id="logout" class="nav-link btn btn-link px-3 py-0">Sign out</button>
				</li>
			</ul>
		</nav>

		<div class="container-fluid">
			<div id="alert" role="alert"></div>

			<div class="row">
				<nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
					<div class="sidebar-sticky pt-3">
						<ul class="nav flex-column">
							<li class="nav-item">
								<div style="width: 170px; height: 200px;">
									<img src="/uploads/<%= admin.avatar  ? admin.avatar : 'defaultProfileAvatar.png' %>" alt="Image" class="rounded" style="width: 100%; height: 100%;" />
								</div>
							</li>
							<li class="nav-item">
								<br />
								<h4 class="mt-2"><%= admin.firstName %> <%= admin.lastName %></h4>
							</li>
						</ul>
						<!-- <a type="button" href="/api/admin/editProfileAdmin" class="btn btn-primary">Edit Profile</a> -->
					</div>
				</nav>

				<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
					<div class="d-flex justify-content-between mt-4">
						<h2>BLOGGERS</h2>
						<!-- <a type="button" href="/api/articles/addArticle" class="btn btn-primary mb-2">Add Article</a> -->
					</div>

					<!-- Start table of bloggers -->
					<div class="table-responsive">
						<table class="table table-striped table-sm">
							<thead>
								<tr>
									<th>#</th>
									<th>First name</th>
									<th>Last name</th>
									<th>Username</th>
									<th>Mobile No.</th>
								</tr>
							</thead>
							<tbody>
								<% for(let i = 0; i < bloggers.length; i++) { %>
								<!-- loop through bloggers  -->
								<tr class="clickable-rows" style="cursor: pointer;" data-href="http://localhost:3000/api/admin/bloggers/<%= bloggers[i]._id %> ">
									<td><%= i + 1 %></td>
									<td><%= bloggers[i].firstName %></td>
									<td><%= bloggers[i].lastName %></td>
									<td><%= bloggers[i].userName %></td>
									<td><%= bloggers[i].mobile %></td>
								</tr>
								<% } %>
							</tbody>
						</table>
					</div>
					<!-- End table of bloggers -->
				</main>
			</div>
		</div>
		<!-- Dashboard End -->

		<%- include("../partials/scripts.ejs") %>
		<script src="/js/dashboardAdmin.js"></script>
	</body>
</html>
